<!DOCTYPE html>
<html lang="en">

<head>
     <meta charset="UTF-8">
     <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <title>Document</title>
     <!-- <link rel="stylesheet" href="css/dashboard.css"> -->
     <link rel="stylesheet" href="css/doctor.css">
     <script src="js/doctor_script.js"></script>
     <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
     <script src="sweetalert2.all.min.js"></script>

</head>

<body>
     <div class="top-banner">
          <h1>Welcome to Our Hospital</h1>
     </div>
     <div class="content">
          <div class="sidenav">
               <a href="/">DASHBOARD</a>
      <a href="/patient">Patient</a>
      <a href="/doctor">Doctor</a>
      <a href="/room">Room</a>
      <a href="/nurse">Nurse</a>
      <a href="/appointment">Appointment</a>
      <a href="/prescription_diagnoses">Prescription_Diagnoses</a>
      <a href="/billing_payment">Billing & Payment</a>
      <a href="/report">Generate Report</a>

          </div>

          <div class="box">

               <div class="tab">
                    <button onclick="showform()">Add Doctor</button>
                    <button onclick="showtable()">Show All Doctor</button>
               </div>
               <div class="tab">
                    <div class="item">
                         <label for="doctorId">Doctor ID</label>
                         <input type="text" id="doctorId" name="doctorId">
                    </div>
                    <div class="item">
                         <label for="doctorfirstname">Doctor First_Name</label>
                         <input type="text" id="doctorfirstname" name="doctorfirstname">
                    </div>
                    <div class="item">
                         <label for="department">Department</label>
                         <input type="text" id="doctordepartment" name="department">
                    </div>
                    <button onclick="filterDoctor()">Filter</button>
                    <button onclick="filterReset()">Reset</button>
               </div>


               <div class="common-area">
                    <div class="doctor-form" id="form">
                         <hr>
                              <br>
                              <h2>Add New Doctor</h2>
                              <br>
                         <form id="doctorForm">
                              <label for="firstName">First Name:</label>
                              <input type="text" id="firstName" name="firstName" required>

                              <label for="lastName">Last Name:</label>
                              <input type="text" id="lastName" name="lastName" required>

                              <label for="department">Department:</label>
                              <select name="department" id="department">
                                   <option value="">Select Department</option>
                                   <option value="Cardiology">Cardiology</option>
                                   <option value="Orthopedics">Orthopedics</option>
                                   <option value="Neurology">Neurology</option>
                                   <option value="Pediatrics">Pediatrics</option>
                              </select>

                              <label for="specialty">Specialty:</label>
                              <input type="text" id="specialty" name="specialty" required>

                              <label for="roomNo">Room No:</label>
                              <input type="number" id="roomNo" name="roomNo" required>

                              <input type="button" value="submit" onclick="addDoctor()">
                         </form>

                    </div>
                    <div class="doctor-table" id="table">
                         <table id="doctorTable"></table>
                    </div>
               </div>
          </div>
     </div>
</body>

</html>