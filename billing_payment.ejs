     <link rel="stylesheet" href="css/billing_payment.css">
     <script src="js/billing_payment.js"></script>
     <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
     <script src="sweetalert2.all.min.js"></script>
</head>

<body>
     <div class="top-banner">
          <h1>Welcome to Our Hospital</h1>
     </div>
     <div class="content">
          <div class="sidenav">
               <a href="/">DASHBOARD</a>
      <a href="/patient">Patient</a>
      <a href="/doctor">Doctor</a>
      <a href="/room">Room</a>
      <a href="/nurse">Nurse</a>
      <a href="/appointment">Appointment</a>
      <a href="/prescription_diagnoses">Prescription_Diagnoses</a>
      <a href="/billing_payment">Billing & Payment</a>
      <a href="/report">Generate Report</a>
          </div>

          <div class="box">
               <div class="tab">
                    <button onclick="billForm()">Create Bill</button>
                    <button onclick="payForm()">Payment</button>
                    <button onclick="billing()">Bill  Record</button>
                    <button onclick="payment()">Payment Record</button>
               </div>
               <div class="tab">
                    <div class="item">
                         <label for="patient_Id">Patient_Id</label>
                         <input type="number" id="patient_Id">
                    </div>
                    <button onclick="filterBillPayment()">Filter</button>
               </div>
               <div class="common-area">
                    <div class="billing-form" id="formBill">
                         <hr>
                         <br>
                         <h2>Billing Form</h2>
                         <form id="billingForm">
                              <label for="patient_id">Patient ID:</label>
                              <input type="number" id="patient_id" name="patient_id">

                              <label for="medication_charge">Medication Charge :</label>
                              <input type="number" id="medication_charge" name="medication_charge">

                              <label for="service_charge">Service Charge :</label>
                              <input type="number" id="service_charge" name="service_charge">
                              <input type="button" value="submit" onclick="bill()">
                         </form>
                    </div>
                    <div class="payment-form" id="formPay">
                         <hr>
                         <br>
                         <h1>Payments Form</h1>
                         <form id="paymentsForm">
                              <label for="billing_id">Billing ID :</label>
                              <input type="number" id="billing_id" name="billing_id">
                              <label for="amount">Amount :</label>
                              <input type="number" id="amount" name="amount">
                              <input type="button" value="submit" onclick="pay()">
                         </form>
                    </div>
                    <div class="bill-pay" id="table1">
                         <table id="bill-table"></table>
                    </div>
                    <div class="bill-pay" id="table2">
                         <table id="pay-table"></table>
                    </div>
               </div>
          </div>
     </div>
</body>

</html>