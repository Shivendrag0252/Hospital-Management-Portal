<!DOCTYPE html>
<html lang="en">

<head>
     <meta charset="UTF-8">
     <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <title>Document</title>
     <!-- <link rel="stylesheet" href="css/dashboard.css"> -->
     <link rel="stylesheet" href="css/prescription_diagnoses.css">
     <script src="js/prescription_diagnoses.js"></script>
     <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
     <script src="sweetalert2.all.min.js"></script>

</head>

<body>
     <div class="top-banner">
          <h1>Welcome to Our Hospital</h1>
     </div>
     <div class="content">
          <div class="sidenav">
               <a href="/">DASHBOARD</a>
      <a href="/patient">Patient</a>
      <a href="/doctor">Doctor</a>
      <a href="/room">Room</a>
      <a href="/nurse">Nurse</a>
      <a href="/appointment">Appointment</a>
      <a href="/prescription_diagnoses">Prescription_Diagnoses</a>
      <a href="/billing_payment">Billing & Payment</a>
      <a href="/report">Generate Report</a>

          </div>

          <div class="box">
               <div class="tab">
                    <button class="add-button" onclick="showDiagnosesForm()">Diagnoses</button>
                    <button class="add-button" onclick="showPrescriptionForm()">Prescription</button>
                    <button class="add-button" onclick="showTable1()">Diagnoses Record</button>
                    <button class="add-button" onclick="showTable2()">Prescription Record</button>
               </div>
               <div class="tab">
          
                    <div class="item">
                         <label for="patient_id">Patient_Id</label>
                         <input type="number" id="patient_id">
                    </div>
                    <div class="item">
                         <label for="doctor_id">Doctor_Id</label>
                         <input type="number" id="doctor_id">
                    </div>
                    <button onclick="filterTable()">Filter</button>
                  
               </div>
               <div class="common-area">
                    <div class="diagnosis-form" id="diagnosis">
                         <hr>
                         <br>
                         <h2>DiagnosesForm</h2>
                         <br>
                         <form id="diagnosisForm">
                              <label for="diagnosis_patient_id">Patient ID</label>
                              <input type="number" id="diagnosis_patient_id" name="diagnosis_patient_id">
                              <label for="diagnosis_doctor_id">Doctor ID</label>
                              <input type="number" id="diagnosis_doctor_id" name="diagnosis_doctor_id">
                              <label for="diagnosis_description">Diagnosis Description</label>
                              <textarea id="diagnosis_description" name="diagnosis_description"></textarea>
                              <label for="diagnosis_date">Diagnosis Date</label>
                              <input type="date" id="diagnosis_date" name="diagnosis_date">
                              <input type="button" value="submit" onclick="submitDiagnosis()">
                         </form>
                    </div>
                    <div class="prescription-form" id="prescription">
                         <hr>
                         <br>
                         <h2>Prescription Form</h2>
                         <br>
                         <form id="prescriptionForm">
                              <label for="prescription_patient_id">Patient ID</label>
                              <input type="text" id="prescription_patient_id" name="prescription_patient_id">
                              <label for="prescription_doctor_id">Doctor ID</label>
                              <input type="text" id="prescription_doctor_id" name="prescription_doctor_id">

                              <label for="prescription_description">Prescription Description</label>
                              <textarea id="prescription_description" name="prescription_description"></textarea>
                              <label for="prescription_date">Prescription Date</label>
                              <input type="date" id="prescription_date" name="prescription_date">
                              <input type="button" value="Submit Prescription" onclick="submitPrescription()">
                         </form>
                    </div>
                    <div class="prescription_diagnoses" id="table1">
                         <table id="diagnoses_table"></table>
                    </div>
                    <div class="prescription_diagnoses" id="table2">
                         <table id="prescription_table"></table>
                    </div>
               
               </div>
          </div>
     </div>
</body>

</html>